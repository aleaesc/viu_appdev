{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/admin(?:/)?", "dest": "/admin.html" },
    { "src": "/usersurvey(?:/)?", "dest": "/usersurvey.html" },
    { "src": "/index.html", "dest": "/usersurvey.html" },
    { "src": "/", "dest": "/usersurvey.html" },
    { "src": "/(.*)", "status": 404 }
  ]
}
